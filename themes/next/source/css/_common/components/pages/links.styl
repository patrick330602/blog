.page-links {
  .links-item {
    width: 45%;
    border: 1px solid #f2f2f2;
    display: inline-block;
    margin: 5px;
    vertical-align: middle;
  }
  .links-avatar {
    display: table-cell;
    width: 20%;
    vertical-align: middle;
  }
  .links-info {
    display: table-cell;
    width: 80%;
    vertical-align: middle;
    padding: 5px;
    line-height: normal !important;
  }
  h4 {
	  margin: 0px !important;
  }
}
